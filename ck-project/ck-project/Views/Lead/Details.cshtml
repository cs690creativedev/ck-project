@model IEnumerable<ck_project.lead>

@{
    if (HttpContext.Current.User.IsInRole("Administrator"))
    {
        @Html.Partial("_AdminMenu")
    }
    else
    {
        @Html.Partial("_MainMenu")
    }
}

<div class="container">
    <h2>Lead Details</h2>

    @*<p>
        @Html.ActionLink("Create a New Lead", "ListCustomers", "Customers")
    </p>*@
    <table class="table table-striped">
        <thead class="mdb-color darken-3">
            <tr>

                <th>
                    Project Name
                </th>
                <th>
                    Customer Name
                </th>
                <th>
                    SalesPerson
                </th>
                <th>
                    JobAddress
                </th>
                <th>
                    Jobsite City
                </th>
                <th>
                    Jobsite State
                </th>
                <th>
                    Jobsite Zipcode
                </th>


        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.project_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.customer.customer_lastname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employee.emp_lastname)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.address.address1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address.city)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address.state)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.address.zipcode)
                </td>*@

            </tr>
        }

        <tr>
            <th>
                Create Date
            </th>
            <th>
                Last Update Date
            </th>
            <th>
                In City?
            </th>
            <th>
                Tax Exempt?
            </th>
            <th>
                Phone Number 1
            </th>
            <th>
                Phone Number 2
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @item.lead_date.ToString("dd MMM yyyy")
                </td>
                <td>
                    @{
                        if (item.Last_update_date == item.lead_date)
                        {
                            @Html.DisplayName(" - ")

                        }
                        else
                        {
                            @Html.DisplayName(item.Last_update_date.ToString("dd MMM yyyy"))
                        }

                    }
                </td>
                <td>
                    @{
                        if (item.in_city == true)
                        {
                            @Html.DisplayName("Yes")

                        }
                        else
                        {
                            @Html.DisplayName("No")
                        }

                    }
                <td>
                    @{
                        if (item.tax_exempt == true)
                        {
                            @Html.DisplayName("Yes")

                        }
                        else
                        {
                            @Html.DisplayName("No")
                        }

                    }
                </td>
                <td>
                    @item.phone_number
                </td>
                <td>
                    @item.second_phone_number
                </td>
                <td>
                    @item.email
                </td>

            </tr>
                        }
        <tr>
            <th>
                Branch
            </th>

            <th>
                Project Type
            </th>
            <th>
                Project Status
            </th>
            <th>
                Project Class
            </th>
            <th>
                Delivery Status
            </th>

            <th>
                Lead Source
            </th>
            <th>
                Project Class
            </th>

            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.branch.branch_name)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.project_type.project_type_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.project_status.project_status_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.project_class.class_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.delivery_status.delivery_status_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lead_source.source_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.project_class.class_name)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.ActionLink("Back to List ", "ListLead")|
                    @Html.ActionLink("Edit", "Edit", new { id = item.lead_number }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.lead_number },
                new { onclick = "return confirm('Are you sure you wish to delete the lead?');" })
                </td>
            </tr>
        }

    </table>
</div>


