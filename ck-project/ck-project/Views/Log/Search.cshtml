@model ck_project.Models.Search

@{ 
    Layout = null;
}

@using (Html.BeginForm("Index","Log",FormMethod.Post))
{
    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(Model => Model.start,new { htmlAttributes = new { @class = "form-control",@type="date" } })
            
            @Html.ValidationMessageFor(model => model.start, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(Model => Model.end, new { htmlAttributes = new { @class = "form-control",@type="date" } })
            @Html.ValidationMessageFor(model => model.end, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.DropDownListFor(Model => Model.Emp, (List<SelectListItem>)Model.Emp, htmlAttributes: new { @class = "form-control" } )
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Search now" class="btn btn-default" style="width: 140px"/>
        </div>
    </div>



}