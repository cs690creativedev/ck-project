@model IEnumerable<ck_project.lead>

@{
    ViewBag.Title = "MainPage";
}

@Html.Partial("_MainMenu")

<div class="container">
    <table>
        <tr>
            <td style="width:720px"><h2>Projects</h2></td>
            <td style="width:680px" align="right">
                <div data-toggle="modal" data-target="#myModal"><i class="fa fa-question-circle-o" style="font-size:15px; color: blue;"></i> Help</div>
            </td>
        </tr>
        <tr>
            <td colspan="2">This page displays </td>
        </tr>
        <tr>
            <td>
                <input type="button" value="Create Lead" onclick="location.href='@Url.Action("ListCustomers", "Customers")'" class="btn btn-default" style="width: 100px;" />
            </td>
            <td>
                @*@using (Html.BeginForm("MainPage", "Home", FormMethod.Get))
                {
                    <b>Search by: Status</b>
                    Html.RadioButton("searchBy", "Status")<text>  Status</text><br />
                    @Html.DropDownList("searchBy", (IEnumerable<SelectListItem>)ViewBag.projStatus, new { @class = "form-control" });
                    <input type="submit" value="Search" class="btn btn-default" />
                }*@
                @using (Html.BeginForm("MainPage", "Home", FormMethod.Get))
                {
                    <b>Project Name: </b>
                    @Html.TextBox("Search", ViewData.TemplateInfo.FormattedModelValue, new { placeholder = "Type project name here", style = "height: 25px;" });
                    <b>&nbsp;&nbsp;&nbsp;&nbsp;Status:</b>
                    @Html.DropDownList("type", (IEnumerable<SelectListItem>)ViewBag.projStatus, new { style = " height: 25px;" });
                    <div style="float:left; padding-top:5px"><b>&nbsp;&nbsp;&nbsp;Create Date:&nbsp;</b></div>
                    <div style="float:left; padding-right:10px; padding-top:4px"><input style="height:25px; width:160px" type="date" name="start" /></div>
                    <div style="float:left; padding-right:20px; padding-top:4px"><input style="height:25px; width:160px" type="date" name="end" /></div>
                    <div style="padding-top:3px"><input type="submit" value="Search" class="btn btn-default"  /></div>
                }
            </td>
        </tr>
    </table>
    <div style="padding-top:5px"></div>
    <table class="table table-striped" style="clear:both">
        <thead class="mdb-color darken-3">
            <tr>
                <th> @Html.ActionLink("Project Name","Sort",new { by="pn"})</th>
                <th>@Html.ActionLink("Customer", "Sort", new { by = "cu" })</th>
                <th>@Html.ActionLink("Project Type", "Sort", new { by= "pt" })</th>
                <th>Project Status</th>
                <th>@Html.ActionLink("Create Date", "Sort", new { by = "cd" })</th>
                <th>@Html.ActionLink("Last Update Date", "Sort", new { by = "lmd" })</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
             {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.project_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.customer.customer_firstname)
                        @Html.DisplayFor(modelItem => item.customer.customer_lastname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.project_type.project_type_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.project_status.project_status_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.lead_date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Last_update_date)
                    </td>
                    <td>
                        @Html.ActionLink("View", "ProjSummary", "Home", new { id = item.lead_number }, null) |
                        @Html.ActionLink("Edit", "Edit", "Lead", new { id = item.lead_number }, null) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.lead_number }, new { onclick = "return confirm('Are you sure you wish to delete the lead?');" })
                    </td>
                </tr>
             }
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Main Page</h4>
                </div>
                <div class="modal-body">
                    <ul>
                        <li>"Closed" projects can only be found in Archived screen.</li>
                        <li>This screen only shows the top 10 latest projects that pertains to the current user.</li>
                        <li>To search for a specific project, please go to Lead Management --> View Lead.</li>
                        <li>To search by status, please use the search box.</li>
                        <li>To return to a default search, please clear the search box.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>